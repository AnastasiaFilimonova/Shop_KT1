<Window x:Class="Shop_KT1.OrderList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop_KT1"
        mc:Ignorable="d"
        Title="OrderList" Height="600" Width="800" MinHeight="600" MinWidth="800">
    <Grid Height="600" Width="800" >
        <StackPanel VerticalAlignment="Stretch">

            <!-- Заголовок -->
            <TextBlock Text="Список заказов" 
                       FontSize="20" FontWeight="Bold" Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Таблица заказов -->
            <DataGrid x:Name="OrdersGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                      Height="439" Width="794"
                      RowBackground="#FFD1EEFC" AlternatingRowBackground="#FFFFFCD6"
                      BorderThickness="1" BorderBrush="Black" GridLinesVisibility="All"
                      >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Номер заказа" Binding="{Binding OrderId}" />
                    <DataGridTextColumn Header="Дата заказа" Binding="{Binding CreatedDate, StringFormat=d}" />
                    <DataGridTextColumn Header="Кол-во изделий" Binding="{Binding TotalProductCount}" />
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" />
                    <DataGridTextColumn Header="Заказчик (логин)" Binding="{Binding CustomerLogin}" />
                    <DataGridTextColumn Header="Менеджер (логин)" Binding="{Binding ManagerLogin}" />
                </DataGrid.Columns>


            </DataGrid>

            <!-- Панель управления снизу -->
            <Border BorderThickness="1" Padding="20" Background="#FFE0A9AF" Height="88" Margin="0,15,0,15">
                <Button Content="Назад" Width="120" Height="30" DockPanel.Dock="Left" Margin="0,8,0,8" Click="BackButton_Click"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>