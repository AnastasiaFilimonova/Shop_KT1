<Window x:Class="Shop_KT1.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop_KT1"
        mc:Ignorable="d"
        Title="Menu" Height="600" Width="800" MinHeight="600" MinWidth="800" Background="#FFB5D5CA">
    <Grid>
        <TextBlock Text="Главное меню" FontSize="24" FontWeight="Bold" VerticalAlignment="Top" Margin="10,12,0,0"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="300" Margin="0,121,0,0">
            <Button Content="Инвентаризация" Width="260" Height="50" Margin="0,10" Click="Button_Click" />
            <Button Content="Отчёты" Width="260" Height="50" Margin="0,10" Click="Button_Click_1" />
            <Button Content="Список заказов" Width="260" Height="50" Margin="0,10" Click="Button_Click_2" />
            <Button Content="Оформление заказов" Width="260" Height="50" Margin="0,10" Click="Button_Click_3" />
            <Button Content="Производство изделий" Width="260" Height="50" Margin="0,10" Click="Button_Click_4" />
        </StackPanel>
        <Border Background="#FFE0A9AF" Height="90" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="0">
            <Button x:Name="ExitButton" Content="Выход" Width="100" Height="30" Margin="20,34,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </Border>
    </Grid>
</Window>