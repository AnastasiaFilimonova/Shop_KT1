<Window x:Class="Shop_KT1.models.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop_KT1.models"
        mc:Ignorable="d"
        Title="LoginWindow" Height="600" Width="800" MinHeight="600" MinWidth="800" Background="#FFB5D5CA">
    <Grid Height="600" Width="800">
        <TextBlock Text="Авторизация" FontSize="30" FontWeight="Bold" VerticalAlignment="Top" Margin="0,1,0,0"/>
        <Grid Width="800" Height="600" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0">
                <TextBlock Text="Логин" Margin="0,5" FontSize="16"/>
                <TextBox Name="LoginBox" Margin="0,5" BorderThickness="1,1,1,1" Background="White" BorderBrush="#FFABADB3" Height="20"/>
                <TextBlock Text="Пароль" Margin="0,15,0,0" FontSize="16"/>
                <PasswordBox Name="PasswordBox" Margin="0,5" Height="20"/>
                <Button Content="Войти" Name="LoginButton"  Margin="0,20,0,0" Height="30" FontSize="16"/>
            </StackPanel>
        </Grid>
        <Border Background="#FFE0A9AF" Height="100" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
