<Window x:Class="Shop_KT1.AddInventoryItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop_KT1"
        mc:Ignorable="d"
        Title="AddInventoryItemWindow" Height="300" Width="300" MinHeight="300" MinWidth="300" WindowStartupLocation="CenterOwner">
    <Grid Height="300" Width="300">
        <StackPanel Margin="10">
            <TextBlock Text="Название товара:" />
            <TextBox x:Name="MaterialNameTextBox" Margin="0,5,0,10" />
            <TextBlock Text="Единица измерения:" />
            <TextBox x:Name="UnitTextBox" Margin="0,5,0,10" Text="шт." />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                <StackPanel Width="130">
                    <TextBlock Text="Цена за ед." />
                    <TextBox x:Name="PriceTextBox" />
                </StackPanel>
                <StackPanel Width="130" Margin="10,0,0,0">
                    <TextBlock Text="Учётное количество" />
                    <TextBox x:Name="StockTextBox" />
                </StackPanel>
            </StackPanel>
            <Button Content="Добавить" Height="30" Click="AddButton_Click" />
        </StackPanel>
    </Grid>
</Window>