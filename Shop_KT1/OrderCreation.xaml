<Window x:Class="Shop_KT1.OrderCreation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop_KT1"
        mc:Ignorable="d"
        Title="OrderCreation" Height="600" Width="800"
        MinHeight="600" MinWidth="800"
        Background="#FFB5D5CA">

    <Grid Width="800" Height="600">
        <StackPanel Margin="10,10,10,188">

            <!-- Заголовок -->
            <TextBlock Text="Оформление заказа" 
                       FontSize="20" FontWeight="Bold" 
                       Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <!-- Список изделий -->
            <TextBlock Text="Выберите изделие и укажите количество:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <DockPanel Margin="0,0,0,10">
                <ComboBox x:Name="ProductComboBox" Width="300" Height="25" 
                          DisplayMemberPath="Name" Margin="0,0,10,0"/>
                <TextBox x:Name="QuantityTextBox" Width="100" Height="25" 
                         VerticalContentAlignment="Center" Margin="0,0,10,0"/>
                <Button Content="Добавить в заказ" Width="140" Height="25" Click="AddToOrder_Click"/>
            </DockPanel>

            <!-- Таблица позиций заказа -->
            <DataGrid x:Name="OrderItemsGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                      Height="300" Width="780" Margin="0,0,0,15"
                      RowBackground="#FFD1EEFC" AlternatingRowBackground="#FFFFFCD6"
                      BorderThickness="1" BorderBrush="Black" GridLinesVisibility="All">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Изделие" Binding="{Binding ProductName}" Width="*"/>
                    <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="Цена за ед." Binding="{Binding Price}" Width="100"/>
                    <DataGridTextColumn Header="Сумма" Binding="{Binding Total}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Итоговая стоимость -->
            <TextBlock x:Name="TotalTextBlock" 
                       FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,10,10"/>

        </StackPanel>

        <!-- Нижняя панель -->
        <Border BorderThickness="1" Padding="20" Background="#FFE0A9AF" Height="88" Margin="0,496,0,16">
            <DockPanel>
                <Button Content="Конструктор изделия" Width="160" Height="30" DockPanel.Dock="Left"/>
                <Button Content="Оформить заказ" Width="160" Height="30" DockPanel.Dock="Right" Click="SubmitOrder_Click"/>
                <Button Content="Назад" Width="120" Height="30" DockPanel.Dock="Left" Margin="0,0,10,0" Click="BackButton_Click"/>
            </DockPanel>
        </Border>

    </Grid>
</Window>